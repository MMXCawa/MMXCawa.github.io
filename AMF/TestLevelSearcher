<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>谱面检索站 | Level Search</title>
    <link rel="icon" href="https://github.com/MMXCawa/MMXCawa.github.io/blob/main/AMF.jpeg?raw=true">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-size: cover;
            margin: 0;
            padding: 0;
            color: #000000;
            backdrop-filter: blur(10px);
            text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.7);
        }

        .content {
            background: rgba(255, 255, 255, 0.7);
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            border-radius: 10px;
            padding: 20px;
            margin: 20px;
            backdrop-filter: blur(10px);
            text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.7);
        }

        h1, h2 {
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.7);
        }

        input[type="text"] {
            padding: 10px;
            margin: 10px 0;
            border-radius: 5px;
            border: 1px solid #ccc;
            width: calc(100% - 24px);
        }

        button {
            background: rgba(255, 255, 255, 0.4);
            padding: 10px 15px;
            border-radius: 5px;
            border: 1px solid #ccc;
            cursor: pointer;
            text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.7);
        }

        button:hover {
            background: rgba(255, 255, 255, 0.7);
        }

        .error {
            background: red;
            color: white;
            padding: 10px;
            text-align: center;
            position: fixed;
            top: 0;
            width: 100%;
            z-index: 1000;
            transition: transform 0.5s;
        }

        .fade {
            transition: transform 1s ease-in-out;
        }

        .search-result {
            padding: 10px;
            background: rgba(255, 255, 255, 0.4);
            border-radius: 5px;
            margin: 5px 0;
            text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.7);
        }

        .search-result:hover {
            background: rgba(255, 255, 255, 0.7);
        }
    </style>
</head>

<body>
    <div class="content">
        <h1>谱面检索站</h1>
        <h2>目前一共有 <span id="level-count">0</span> 个谱面</h2>
        <input type="text" id="search-box" placeholder="输入作者、歌曲名或谱师名字进行搜索">
        <div id="search-results"></div>
        <button id="download-button" style="display: none;" onclick="downloadLevel()">下载谱面</button>
    </div>
    <div id="error-message" class="error" style="transform: translateY(-100%);"></div>

    <script>
        let levels = [];
        let currentLink = "";

        async function fetchJSONFiles() {
            const response = await fetch('/Levels/');
            const files = await response.json();
            return files.filter(file => file.endsWith('.json'));
        }

        async function readJSONFile(file) {
            const response = await fetch(`/Levels/${file}`);
            return await response.json();
        }

        async function loadLevels() {
            const jsonFiles = await fetchJSONFiles();
            for (const file of jsonFiles) {
                const level = await readJSONFile(file);
                level.fileName = file;
                levels.push(level);
            }
            document.getElementById("level-count").textContent = levels.length;
        }

        function displayError(message) {
            const errorMessage = document.getElementById("error-message");
            errorMessage.textContent = message;
            errorMessage.style.transform = "translateY(0)";
            setTimeout(() => {
                errorMessage.style.transform = "translateY(-100%)";
                setTimeout(() => {
                    errorMessage.style.transform = "";
                }, 1000);
            }, 3000);
        }

        function downloadLevel() {
            if (currentLink === "none") {
                displayError("AMF未提供下载链接");
            } else if (currentLink === "noauth") {
                displayError("AMF不提供不合格谱面");
            } else {
                window.location.href = currentLink;
            }
        }

        function searchLevels() {
            const searchTerm = document.getElementById("search-box").value.toLowerCase();
            const results = levels.filter(level =>
                level.artist.toLowerCase().includes(searchTerm) ||
                level.name.toLowerCase().includes(searchTerm) ||
                level.auther.toLowerCase().includes(searchTerm)
            );

            const searchResults = document.getElementById("search-results");
            searchResults.innerHTML = "";
            results.forEach(result => {
                const div = document.createElement("div");
                div.className = "search-result";
                div.textContent = `歌曲家: ${result.artist} | 曲名: ${result.name} | 谱师: ${result.auther} | 难度: ${result.difficulty} | ${result.fileName}`;
                div.addEventListener("click", () => {
                    document.getElementById("download-button").style.display = "block";
                    currentLink = result.downloadLink;
                });
                searchResults.appendChild(div);
            });
        }

        document.getElementById("search-box").addEventListener("input", searchLevels);

        window.onload = async () => {
            await loadLevels();
        };

        let currentImage = 1;
        const totalImages = 8;

        function changeBackground() {
            currentImage = (currentImage % totalImages) + 1;
            document.body.style.backgroundImage = `url('https://static.indienova.com/assets/template/site-adofai/img/gallery/${currentImage}.jpg')`;
            document.body.classList.add('fade');
            setTimeout(() => {
                document.body.classList.remove('fade');
            }, 1000);
        }

        setInterval(changeBackground, 6000);
    </script>
</body>

</html>
